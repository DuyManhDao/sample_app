<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to I18n.t(".title"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to I18n.t(".home"), root_path %></li>
        <li><%= link_to I18n.t(".help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to I18n.t("users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= I18n.t("account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class="divider"></li>
              <li><%= link_to I18n.t("logout"), logout_path, data: {turbo_method: :delete} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to I18n.t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
